<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pngo.chapter512.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="7dp">

        <Button
            android:id="@+id/powers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/squareRoot"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/squareRoot"
            android:text="x ^ 10" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/squareRoot"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:background="@android:drawable/toast_frame"
            android:text="Answer"
            android:textColor="@android:color/darker_gray"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/addition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/squareRoot"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/squareRoot"
            android:text="x + y" />

        <Button
            android:id="@+id/squareRoot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/powers"
            android:layout_centerHorizontal="true"
            android:text="squrt(x) + absolute(y) + z^y" />

        <EditText
            android:id="@+id/xInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="17dp"
            android:background="@android:drawable/title_bar"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="x" />

        <EditText
            android:id="@+id/yInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/xInput"
            android:layout_alignStart="@+id/xInput"
            android:layout_below="@+id/xInput"
            android:layout_marginTop="25dp"
            android:background="@android:drawable/title_bar"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="y" />

        <EditText
            android:id="@+id/zInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/yInput"
            android:layout_alignStart="@+id/yInput"
            android:layout_below="@+id/yInput"
            android:layout_marginTop="21dp"
            android:background="@android:drawable/title_bar"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="z" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="33dp"
            android:text="Input variables here:"
            android:textSize="18sp" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
